<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/introduce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/DisplayText" />
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/folding"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:contentDescription="@string/accountpassword"
                android:src="@drawable/expand" />
        <Button
            android:id="@+id/fulfill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/review_button_selector"
            android:gravity="center"
            android:textColor="@color/mywhite" />
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/item_folding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:background="@android:color/holo_blue_dark"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    </LinearLayout>