<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/callphone"
        android:text="@string/callphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/getContact"
        android:text="@string/getContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/ALLHERODATA"
            android:text="@string/queryALLHERODATA"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minLines="2"
            android:layout_height="80dp"/>
        <Button
            android:id="@+id/PARTHERODATA"
            android:text="@string/queryPARTHERODATA"
            android:layout_width="0dp"
            android:minLines="2"
            android:layout_weight="1"
            android:layout_height="80dp"/>
        <Button
            android:id="@+id/PARTHERO"
            android:text="@string/queryPARTHERO"
            android:layout_width="0dp"
            android:minLines="2"
            android:layout_weight="1"
            android:layout_height="80dp"/>
    <Button
        android:id="@+id/ALLHERO"
        android:text="@string/queryALLHERO"
        android:layout_width="0dp"
        android:minLines="2"
        android:layout_weight="1"
        android:layout_height="80dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/loyal"
        android:hint="@string/loyal"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp" />
    <EditText
        android:id="@+id/exp"
        android:hint="@string/exp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp" />
</LinearLayout>
<Button
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/cpadddata"
android:text="@string/cpadddata"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/updatehero"
            android:hint="@string/updatahero"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="50dp" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/Deleteherodata"
            android:text="@string/Deleteherodata"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/updateherodata"
            android:text="@string/updateherodata"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/updateSearchhero"
            android:hint="@string/updateSearchhero"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="50dp" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/DeleteSearchherodata"

            android:text="@string/DeleteSearchherodata"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/updateSearchherodata"
            android:text="@string/updateSearchherodata"/>
    </LinearLayout>
    <TextView
        android:id="@+id/CPdisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
