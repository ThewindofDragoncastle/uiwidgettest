<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/SendFirstNotification"
        android:text="@string/SendFirstNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/SendSecondNotification"
        android:text="@string/SendSecondNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/SendThirdNotification"
        android:text="@string/SendThirdNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/SendFourthNotification"
        android:text="@string/SendFourthNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/SendLowestNotification"
        android:text="@string/SendLowestNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

