<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:layout_height="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.42"
                android:gravity="center"
                android:text="@string/accountpassword"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                app:hintTextAppearance="@style/MyHoloBluestyleforHint"
                app:counterEnabled="true"
                app:counterMaxLength="16"
                app:counterOverflowTextAppearance="@style/MyHoloBluestyleforError">
                <EditText
                    android:id="@+id/passwordinput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@android:style/Widget.Holo.Light.AutoCompleteTextView"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="start"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="@string/inputyourpassword"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/eyes"
                android:layout_width="0dp"
                android:layout_weight="0.55"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/eye" />
        </LinearLayout>
        <View
            android:background="@color/mygrey"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="1dp"/>
        <View
            android:background="@color/mygrey"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <View
            android:background="@color/mygrey"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <View
            android:background="@color/mygrey"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>
